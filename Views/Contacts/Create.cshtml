@model ContactProKev_MVC.Models.Contact

@{
    ViewData["Title"] = "Create";
}


<h1>EDIT CONTACT</h1>
<div class="p-3 border border-2 shadow-lg bg-light">
  <form asp-action="Create" method="post" asp-controller="Contacts" enctype="multipart/form-data">
    <div class="row g-3 p-2">
      <div class="col-12 col-lg-4">
        <div class="square-img-container">
          <img class="square-img" src="~/img/superdog200bg.jpg">
        </div>
        <div>
          <label asp-for="ImageFile" class="control-label"></label>
          <input  type="file" class="form-control" accept=".png,.jpg,.jpeg,.gif">
        </div>
      </div>
      <div class="col-12 col-lg-8">
        <div class="row">
          <div class="col-12 col-lg-6 ">
            <label asp-for="FirstName" class="form-label">First Name</label>
            <input asp-for="FirstName" type="text" class="form-control">
            <span asp-validation-for="FirstName" class="text-danger"></span>
          </div>
          <div class="col-12 col-lg-6">
            <label asp-for="LastName" class="form-label">Last Name</label>
            <input asp-for="LastName" type="text" class="form-control">
            <span asp-validation-for="LastName" class="text-danger"></span>
          </div>
          <div class="col-12 col-lg-6 mt-2">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email"type="email" class="form-control">
            <span asp-validation-for="Email" class="text-danger"></span>
          </div>
          <div class="col-12 col-lg-6 mt-2">
            <label asp-for="PhoneNumber" class="form-label">Phone</label>
            <input asp-for="PhoneNumber" type="tel" class="form-control">
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
          </div>
          <div class="col-12 mt-2">
            <label asp-for="Address1" class="form-label">Address</label>
            <input asp-for="Address1" type="text" class="form-control">
            <span asp-validation-for="Address1" class="text-danger"></span>
          </div>
          <div class="col-12 mt-2">
            <label asp-for="Address2" class="form-label">Address 2</label>
            <input asp-for="Address2"type="text" class="form-control">
            <span asp-validation-for="Address2" class="text-danger"></span>
          </div>
          <div class="col-12 col-lg-6 mt-2">
            <label asp-for="City" class="form-label">City</label>
            <input asp-for="City" type="text" class="form-control">
            <span asp-validation-for="City" class="text-danger"></span>
          </div>

          <div class="col-12 col-lg-4 mt-2">
                <label asp-for="State" class="form-label">State</label>
                 <select asp-for="State" class="form-control" asp-items="ViewBag.StatesList"></select>
          </div>
         <div class="col-12 col-lg-2 mt-2">
            <label asp-for="ZipCode" class="form-label">Zip</label>
            <input asp-for="ZipCode" type="text" class="form-control">
          </div>
          <span asp-validation-for="ZipCode" class="text-danger"></span>
          <div class="col-12 col-lg-6 mt-3">
            <label asp-for="Categories" class="control-label">Categories</label>
            <select asp-items="ViewBag.CategoryList" name="CategoryList" class="form-select" multiple >
              
              <!--think im missing something^^-->
            </select>
          </div>
          <div class="col-12 col-lg-6 mt-3">
            <label asp-for="BirthDate" class="control-label">Birth Date</label>
            <input asp-for="BirthDate" type="date" class="form-control" >
            <span asp-validation-for="BirthDate" class="text-danger"></span>

          </div>
          <div class="col-12 d-flex justify-content-end mt-2">
            <button type="submit" class="btn btn-lg btn-primary rounded-pill">Save</button>

          </div>
        </div>
      </div>
    </div>
  </form>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div> 

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
